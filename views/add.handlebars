<section id="add" class="container">
  <div class="form-wrap">
    <h1>Add A Menu</h1>
    <form action="/menu/add" method="POST"> 

      <div class="form-group">
        <label for="name">Menu name: </label> <br>
        <input type="text" name="name" id="name" class="form-control" placeholder="eg. Jay's favorite menu" maxlength="100"
          value={{name}}>
      </div>



      <div class="form-group">
        <label for="category">Menu Category: </label> <br>
        <input type="text" name="category" id="category" class="form-control" placeholder="eg. Dinner, Brunch, BBQ"
          maxlength="100" value={{category}}>
      </div>


      <div class="form-group">
        <label for="desc">Menu Description: </label> <br>
        <textarea name="desc" id="desc" class="form-control" placeholder="Describe the details of the Menu"
          rows="10">{{desc}}</textarea>
      </div>


      <input type="submit" value="Add Menu" id="menuSubmit" class="btn btn-reverse">
    </form>
  </div>
</section>

<script src="../public/js/menu.js" ></script>