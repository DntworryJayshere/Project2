<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <h3>Create a new Menu!</h3>

        <form class="clearfix mb-4" action="POST">

          <div class="form-group">
            <label for="menu-category">menu category</label>
            <input type="text" id="menu-category" class="form-control" aria-describedby="menu-category"
              placeholder="Enter menu category">
          </div>

          <div class="form-group">
            <label for="menu-desc">menu desc</label>
            <textarea class="form-control" id="menu-desc" aria-describedby="menu-desc"
              placeholder="Enter menu Description"></textarea>
          </div>  

          <button id="submit" class="btn btn-primary float-right">Submit</button>

        </form>

        <h3>Menus:</h3>
        <ul id="menu-list" class="list-group">
          {{#each menus}}
          <li data-id="{{this.dataValues.id}}" class="list-group-item">
            <a href="menu/{{this.dataValues.id}}">{{this.dataValues.category}} | {{this.dataValues.desc}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>